{% extends 'templateUser.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        {% if products|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>
                                {% if product.image %}

                                    <img src="../assets/img/products/{{ product.image }}" alt="{{ product.name }}" style="max-width: 120px;">
                                {% else %}
                                    <span class="text-muted">no image</span>
                                {% endif %}
                            </td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.description|slice(0, 50) }}{% if product.description|length > 50 %}...{% endif %}</td>
                            <td>{{ product.price|number_format(2, ',', ' ') }} $</td>
                            <td>{{ product.stock }}</td>
                            <td>
                                <div class="btn-group" role="group">

                                    <a href="#"
                                       class="btn btn-sm btn-info"
                                       title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#"
                                       class="btn btn-sm btn-warning"
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="#"
                                          method="post"
                                          onsubmit="return confirm('are you sure you want to delete this product ?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        {% else %}

            <div class="alert alert-info">
                Aucun produit trouvé.
            </div>
        {% endif %}
    {% elseif is_granted('ROLE_USER') %}
        <div class="container">
            <div class="row">
                {% if products is empty %}
                    <p class="text-center">Nothing to show</p>
                {% else %}
                    {% for product in products %}
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100">
                                <img class="card-img-top" src="../assets/img/products/{{ product.image }}"
                                     alt="Product image"
                                     style="width: 100%; height: 250px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text">{{ product.description }}</p>
                                    <a href="javascript:void(0)" class="btn btn-outline-primary">Add to cart</a>
                                    <a href="" class="btn btn-outline-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    {% endif %}

{% endblock %}
